generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  username String    @unique
  email    String    @unique
  password String
  workouts Workout[]
}

model Workout {
  id        Int        @id @default(autoincrement())
  userId    Int
  name      String
  date      DateTime   @default(now())
  exercises Exercise[]
  user      User       @relation(fields: [userId], references: [id])
}

model Exercise {
  id          Int     @id @default(autoincrement())
  workoutId   Int
  name        String
  sets        Int
  repetitions Int
  weight      Float
  IsDone      Boolean @default(false)
  restTime    Int     @default(60) //in seconds
  workout     Workout @relation(fields: [workoutId], references: [id])
}
